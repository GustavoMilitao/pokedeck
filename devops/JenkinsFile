	currentBuild.result = "SUCCESS"
	try {
pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000 -p 5000:5000' 
        }
    }
    environment {
        CI = 'true'
    }
    stages {
		stage('Checkout'){

          checkout scm
       }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Docker') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }
    }
}
}catch (err) {

        currentBuild.result = "FAILURE"

        throw err
    }